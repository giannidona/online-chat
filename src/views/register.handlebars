<h1 class="text-center mt-10 font-bold">REGISTER</h1>
<h2 class="text-center mt-2">Welcome to Global Chat</h2>

<div class="w-2/4 mt-5 m-auto flex justify-center">
  <form
    action="http://localhost:8080/api/register"
    method="post"
    enctype="multipart/form-data"
    class="pt-5"
  >
    <div class="pb-2">
      <div>
        <label for="username">Username</label>
      </div>
      <div>
        <input
          type="text"
          id="username"
          name="username"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <div class="pb-2">
      <div>
        <label for="email">Email</label>
      </div>
      <div>
        <input
          type="email"
          id="email"
          name="email"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <div class="pb-2">
      <div>
        <label for="password">Password</label>
      </div>
      <div>
        <input
          type="password"
          id="password"
          name="password"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <p>Profile Picture</p>
    <div class="pb-2 flex items-center justify-center w-full">
      <label
        for="dropzone-file"
        class="flex flex-col items-center justify-center w-full h-48 border-2 border-black rounded-lg cursor-pointer bg-black hover:bg-neutral-700"
      >
        <div class="flex flex-col items-center justify-center pt-5 pb-6">
          <svg
            class="w-8 h-8 mb-4 text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 20 16"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"
            />
          </svg>
          <p class="mb-2 text-sm text-white"><span class="font-semibold">Click
              to upload</span>
            or drag and drop</p>
          <p class="text-xs text-white">
            PNG, JPG (MAX. 800x400px)</p>
        </div>
        <input id="dropzone-file" type="file" class="hidden" />
      </label>
    </div>
    <div class="mt-5 flex justify-center">
      <button
        type="submit"
        class="bg-black text-white rounded-full px-3 py-1 hover:bg-neutral-700"
      >Register</button>
    </div>
  </form>
</div>