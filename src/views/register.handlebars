<h1 class="text-center mt-10 font-bold">REGISTER</h1>
<h2 class="text-center mt-2">Welcome to Global Chat</h2>

<div class="w-2/4 mt-5 m-auto flex justify-center">
  <form
    action="http://localhost:8080/register"
    method="post"
    enctype="multipart/form-data"
    class="pt-5"
  >
    <div class="pb-2">
      <div>
        <label for="username">Username</label>
      </div>
      <div>
        <input
          type="text"
          id="username"
          name="username"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <div class="pb-2">
      <div>
        <label for="email">Email</label>
      </div>
      <div>
        <input
          type="email"
          id="email"
          name="email"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <div class="pb-2">
      <div>
        <label for="password">Password</label>
      </div>
      <div>
        <input
          type="password"
          id="password"
          name="password"
          class="border-2 border-black rounded-full px-3 py-1"
        />
      </div>
    </div>
    <div class="pb-2">
      <p>Profile Picture</p>
      <div>
        <label
          class="flex flex-col items-center px-4 py-6 bg-white text-black rounded-lg shadow-lg cursor-pointer hover:bg-black hover:text-white"
          for="file"
        >
          <svg
            class="w-8 h-8"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z"
            />
          </svg>
          <span class="mt-2 text-base leading-normal">Select a file</span>
          <input type="file" id="file" name="file" class="hidden" />
        </label>
      </div>
    </div>
    <div class="mt-5 flex justify-center">
      <button
        type="submit"
        class="bg-black text-white rounded-full px-3 py-1 hover:bg-neutral-700"
      >Register</button>
    </div>
    <div class="mt-5 flex justify-center">
      <span>or login
        <a
          href="http://localhost:8080/login"
          class="text-blue-500"
        >here</a></span>
    </div>
  </form>
</div>